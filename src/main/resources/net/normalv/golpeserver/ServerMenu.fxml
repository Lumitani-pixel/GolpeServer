                        <Font name="System Bold Italic" size="33.0" />
                     </font>
                  </Label>
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartButtonClick" text="Start Server" textFill="#0042ab" />
                  <VBox alignment="CENTER" prefHeight="164.0" prefWidth="600.0" spacing="20.0">
                     <children>
                        <Label fx:id="playerCount" text="0/2 Players" />
                        <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#onStartGameButton" text="Start Game" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
    </Tab>
    <Tab closable="false" text="Settings">
         <content>
            <HBox prefHeight="100.0" prefWidth="200.0" />
         </content>
    </Tab>
      <Tab closable="false" text="Logs">
         <content>
            <TextArea fx:id="logs" editable="false" prefHeight="200.0" prefWidth="200.0" />
         </content>
      </Tab>
  </tabs>
</TabPane>
